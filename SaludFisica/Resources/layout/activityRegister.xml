
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/activityRegisterPage"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    android:background="@android:color/holo_blue_light">

        <TextView
            android:text="Registro de Actividad"
            android:textSize="40dp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleActivityRegister" />
        <TextView
            android:text=""
            android:textSize="35dp"
            android:textAlignment="center"
            android:textColor="?android:attr/colorPrimaryDark"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dateActivityRegister" 
            android:layout_below="@+id/titleActivityRegister"/>
        <TextView
        android:text="Seleccione las actividades completadas hoy"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/indicationsText" 
        android:layout_below="@+id/dateActivityRegister"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/dietCheck"
        android:layout_below="@+id/indicationsText"/>
    <TextView
        android:text="Dieta"
        android:textSize="30dp"
        android:textColor="@android:color/black"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/dietTextSelection" 
        android:layout_below="@+id/indicationsText"
        android:layout_toRightOf="@+id/dietCheck"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:id="@+id/rutineCheck"
        android:layout_below="@+id/dietTextSelection"/>
    <TextView
        android:text="Rutina"
        android:textSize="30dp"
        android:textColor="@android:color/black"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/rutineTextSelection" 
        android:layout_below="@+id/dietTextSelection"
        android:layout_toRightOf="@+id/rutineCheck"/>
    <Button
                android:text="Guardar"
                android:textSize="20dp"
                android:layout_centerInParent="true"
                android:background="@drawable/buttonStyle"
                android:layout_margin="10dp"
                android:visibility="visible"
                android:layout_width="150dp"
                android:onClick="saveActivity"
                android:layout_height="wrap_content"
                android:id="@+id/saveActivity" 
                android:layout_below="@+id/rutineTextSelection"/>
</RelativeLayout>