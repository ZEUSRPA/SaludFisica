
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/add_user_page"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    android:background="@android:color/holo_blue_light">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Datos Personales"
                android:textSize="30dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/titlePersonalDataDetails" 
                android:layout_below="@+id/changeUserButton"/>
            <TextView
                android:text="Nombre"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/pacientNameLabel" 
                android:layout_below="@+id/titlePersonalDataDetails"/>
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:minWidth="25px"
                android:minHeight="25px"
                android:hint="Nombre"
                android:enabled="false"
                android:id="@+id/pacientNameDetailsET" 
                android:background="@drawable/editTextStyle"
                android:layout_below="@+id/pacientNameLabel"/>
            <TextView
                android:text="Edad"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/pacientAgeLabel" 
                android:layout_below="@+id/pacientNameDetailsET"/>
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textAlignment="center"
                android:inputType="number"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:minWidth="25px"
                android:minHeight="25px"
                android:hint="Edad"
                android:enabled="false"
                android:id="@+id/pacientAgeDetailsET" 
                android:background="@drawable/editTextStyle"
                android:layout_below="@+id/pacientAgeLabel"/>
            
            <TextView
                android:text="Sexo"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/pacientGenderLabel" 
                android:layout_below="@+id/pacientAgeDetailsET"/>
            <Spinner
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:id="@+id/pacientGenderDetailsSP"
                android:visibility="invisible"
                android:layout_below="@id/pacientGenderLabel"/>
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:minWidth="25px"
                android:minHeight="25px"
                android:hint="Sexo"
                android:enabled="false"
                android:id="@+id/pacientGenderDetailsET" 
                android:background="@drawable/editTextStyle"
                android:layout_below="@+id/pacientGenderLabel"/>
            <TextView
                android:text="Ocupacion"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/pacientJobLabel" 
                android:layout_below="@+id/pacientGenderDetailsET"/>
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:minWidth="25px"
                android:minHeight="25px"
                android:hint="Ocupacion"
                android:enabled="false"
                android:id="@+id/pacientJobDetailsET" 
                android:background="@drawable/editTextStyle"
                android:layout_below="@+id/pacientJobLabel"/>
            <TextView
                android:text="Domicilio"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/pacientAddressLabel" 
                android:layout_below="@+id/pacientJobDetailsET"/>
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:minWidth="25px"
                android:minHeight="25px"
                android:hint="Domicilio"
                android:enabled="false"
                android:id="@+id/pacientAddressDetailsET" 
                android:background="@drawable/editTextStyle"
                android:layout_below="@+id/pacientAddressLabel"/>
            <TextView
                android:text="Telefono"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/pacientPhoneLabel" 
                android:layout_below="@+id/pacientAddressDetailsET"/>
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textAlignment="center"
                android:inputType="number"
                android:maxLength="10"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:minWidth="25px"
                android:minHeight="25px"
                android:hint="Telefono"
                android:enabled="false"
                android:id="@+id/pacientPhoneDetailsET" 
                android:background="@drawable/editTextStyle"
                android:layout_below="@+id/pacientPhoneLabel"/>
            <Button
                android:text="Editar Datos"
                android:textSize="20dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/buttonStyle"
                android:layout_margin="10dp"
                android:layout_width="250dp"
                android:onClick="changePersonalData"
                android:layout_height="wrap_content"
                android:id="@+id/changePersonalData" 
                android:layout_below="@+id/pacientPhoneDetailsET"/>
            <Button
                android:text="Cancelar"
                android:textSize="20dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/buttonDangerStyle"
                android:layout_margin="10dp"
                android:layout_width="150dp"
                android:onClick="cancelPersonalDataUpdate"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:id="@+id/cancelUpdatePersonalDataPB" 
                android:layout_below="@+id/pacientPhoneDetailsET"/>
            <Button
                android:text="Guardar"
                android:textSize="20dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/buttonStyle"
                android:layout_margin="10dp"
                android:visibility="invisible"
                android:layout_width="150dp"
                android:onClick="savePersonalDataUpdate"
                android:layout_height="wrap_content"
                android:id="@+id/savePersonalDataUpdatePB" 
                android:layout_below="@+id/pacientPhoneDetailsET"/>
        </RelativeLayout>
    </ScrollView>
    

</RelativeLayout>