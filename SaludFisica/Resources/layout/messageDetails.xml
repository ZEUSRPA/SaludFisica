<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/addDietasPage"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    android:background="@android:color/holo_blue_light">

    <TextView
            android:text="Enviar de Mensaje"
            android:textSize="40dp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleNewMessage" />
    <TextView
            android:text="Destinatario"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleDestination"
            android:layout_below="@+id/titleNewMessage"/>
        <Spinner
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:id="@+id/messageDestinationSP"
            android:visibility="invisible"
            android:layout_below="@+id/titleDestination"/>
        <EditText
            android:inputType="text"
            android:textSize="20dp"
            android:layout_width="300dp"
            android:enabled="false"
            android:hint="Destinatario"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:id="@+id/messageDestinationDetailsET" 
            android:layout_below="@+id/titleDestination"
            android:background="@drawable/editTextStyle"/>
        <TextView
            android:text="Asunto"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleSubject" 
            android:layout_below="@+id/messageDestinationDetailsET"/>
        <EditText
            android:inputType="text"
            android:textSize="20dp"
            android:layout_width="300dp"
            android:enabled="false"
            android:hint="Asunto"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:id="@+id/messageSubjectET" 
            android:layout_below="@+id/titleSubject"
            android:background="@drawable/editTextStyle"/>
        <TextView
            android:text="Mensaje"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleMessage" 
            android:layout_below="@+id/messageSubjectET"/>
        <EditText
            android:inputType="textMultiLine"
            android:textSize="20dp"
            android:layout_width="300dp"
            android:enabled="false"
            android:hint="Mensaje"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:id="@+id/messageDescription" 
            android:layout_below="@+id/titleMessage"
            android:background="@drawable/editTextStyle"/>
        <Button
            android:text="Enviar"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:layout_width="200dp"
            android:onClick="sendMessage"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/sendMessagePB" 
            android:layout_below="@+id/messageDescription"
            android:background="@drawable/buttonStyle"/>
</RelativeLayout>