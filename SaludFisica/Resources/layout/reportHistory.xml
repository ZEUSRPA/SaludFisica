<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/reportHistoryPage"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    android:background="@android:color/holo_blue_light">
    
    <TextView
        android:text="Historial de Actividades"
        android:textSize="40dp"
        android:textAlignment="center"
        android:textColor="?android:attr/colorPrimaryDark"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/titleHistory" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/titleHistory"
        android:id="@+id/historyMainScroll">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ListView
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_height="400dp"
                android:id="@+id/listHistory"
                android:textAlignment="center"/>
        </LinearLayout>
    </ScrollView>
        
</RelativeLayout>
