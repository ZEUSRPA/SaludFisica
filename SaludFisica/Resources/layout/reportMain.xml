
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/dietDetailsPage"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    android:background="@android:color/holo_blue_light">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Reporte de Actividades"
                android:textSize="40dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/titleReport" />
            <TextView
                android:text="Resumen"
                android:textSize="30dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/resumeText" 
                android:layout_below="@+id/titleReport"/>
            <TextView
                android:text="Dieta"
                android:textSize="30dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/dietText" 
                android:layout_below="@+id/resumeText"/>
            <TextView
                android:text="Dias siguiendo la dieta:"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/dietDaysText" 
                android:layout_below="@+id/dietText"/>
            <TextView
                android:text=""
                android:textSize="25dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/dietDays" 
                android:layout_below="@+id/dietDaysText"/>
            <TextView
                android:text="Kcal. Consumidas:"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/kcalText" 
                android:layout_below="@+id/dietDays"/>
            <TextView
                android:text=""
                android:textSize="25dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/kcal" 
                android:layout_below="@+id/kcalText"/>
            <TextView
                android:text="Dias siguiendo la rutina:"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/rutineDaysText" 
                android:layout_below="@+id/kcal"/>
            <TextView
                android:text=""
                android:textSize="25dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/rutineDays" 
                android:layout_below="@+id/rutineDaysText"/>
            <TextView
                android:text="Kcal.Quemadas:"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/kcalRutinaText" 
                android:layout_below="@+id/rutineDays"/>
            <TextView
                android:text=""
                android:textSize="25dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/kcalRutina" 
                android:layout_below="@+id/kcalRutinaText"/>
            <Button
                android:text="Ver Historial"
                android:textSize="20dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/buttonStyle"
                android:layout_margin="10dp"
                android:visibility="visible"
                android:layout_width="250dp"
                android:onClick="history"
                android:layout_height="wrap_content"
                android:id="@+id/historyPB" 
                android:layout_below="@+id/kcalRutina"/>
           
            </RelativeLayout>
    </ScrollView>

</RelativeLayout>