<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/add_user_page"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    android:background="@android:color/holo_blue_light">
   

    <TextView
        android:text="AGREGAR PACIENTE"
        android:textSize="40dp"
        android:textAlignment="center"
        android:textColor="?android:attr/colorPrimaryDark"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/titleAgregarPaciente" />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:hint="UserName"
        android:id="@+id/usernameAgregarPaciente" 
        android:background="@drawable/editTextStyle"
        android:layout_below="@+id/titleAgregarPaciente"/>
    <EditText
        android:inputType="textPassword"
        android:textSize="20dp"
        android:hint="Password"
        android:layout_width="300dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/passwordAgregarPaciente"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/editTextStyle"
        android:layout_below="@+id/usernameAgregarPaciente"/>
    <EditText
        android:inputType="textPassword"
        android:textSize="20dp"
        android:layout_width="300dp"
        android:hint="Repeat Password"
        android:layout_height="wrap_content"
        android:id="@+id/passwordConfirm" 
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/editTextStyle"
        android:layout_below="@+id/passwordAgregarPaciente"/>
    <Button
        android:text="Agregar"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonStyle"
        android:layout_margin="10dp"
        android:layout_width="250dp"
        android:onClick="Agregar"
        android:layout_height="wrap_content"
        android:id="@+id/agregarNuevoPaciente" 
        android:layout_below="@+id/passwordConfirm"/>
        

</RelativeLayout>
