
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/pacientDetailsPage"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    android:background="@android:color/holo_blue_light">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Detalles del Paciente"
                android:textSize="35dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/titlePacientDetails" />
            <TextView
                android:text="Usuario"
                android:textSize="30dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/titleUserDetails" 
                android:layout_below="@+id/titlePacientDetails"/>
            <TextView
                android:text="Nombre"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/userNameLabel" 
                android:layout_below="@+id/titleUserDetails"/>
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:minWidth="25px"
                android:minHeight="25px"
                android:hint="Nombre de Usuario"
                android:id="@+id/userNameDetailsET" 
                android:background="@drawable/editTextStyle"
                android:enabled="false"
                android:layout_below="@+id/userNameLabel"/>
            <Button
                android:text="Ver Detalles"
                android:textSize="20dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/buttonStyle"
                android:layout_margin="10dp"
                android:layout_width="250dp"
                android:onClick="userDetailsPB"
                android:layout_height="wrap_content"
                android:id="@+id/userDetailsPB" 
                android:layout_below="@+id/userNameDetailsET"/>

            <TextView
                android:text="Datos Personales"
                android:textSize="30dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/titlePersonalDataDetails" 
                android:layout_below="@+id/userDetailsPB"/>
            <TextView
                android:text="Nombre"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/pacientNameDetailsLabel" 
                android:layout_below="@+id/titlePersonalDataDetails"/>
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:minWidth="25px"
                android:minHeight="25px"
                android:hint="Nombre"
                android:enabled="false"
                android:id="@+id/pacientNameDetails" 
                android:background="@drawable/editTextStyle"
                android:layout_below="@+id/pacientNameDetailsLabel"/>
            <Button
                android:text="Ver Detalles"
                android:textSize="20dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/buttonStyle"
                android:layout_margin="10dp"
                android:layout_width="250dp"
                android:onClick="personalDataDetailsPB"
                android:layout_height="wrap_content"
                android:id="@+id/personalDataDetailsPB" 
                android:layout_below="@+id/pacientNameDetails"/>

            <TextView
                android:text="Expediente"
                android:textSize="30dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/titleRecordDetails" 
                android:layout_below="@id/personalDataDetailsPB"/>
            <TextView
                android:text="Nombre"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/pacientNameRecordDetailsLabel" 
                android:layout_below="@+id/titleRecordDetails"/>
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:minWidth="25px"
                android:minHeight="25px"
                android:hint="Nombre"
                android:enabled="false"
                android:id="@+id/pacientNameRecordDetails" 
                android:background="@drawable/editTextStyle"
                android:layout_below="@+id/pacientNameRecordDetailsLabel"/>
            <Button
                android:text="Ver Detalles"
                android:textSize="20dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/buttonStyle"
                android:layout_margin="10dp"
                android:layout_width="250dp"
                android:onClick="recordDetailsPB"
                android:layout_height="wrap_content"
                android:id="@+id/recordDetailsPB" 
                android:layout_below="@+id/pacientNameRecordDetails"/>

            <TextView
                android:text="Dieta"
                android:textSize="30dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/titleDietDetails" 
                android:layout_below="@+id/recordDetailsPB"/>
            <TextView
                android:text="Nombre"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/dietNameLabel" 
                android:layout_below="@+id/titleDietDetails"/>
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:minWidth="25px"
                android:minHeight="25px"
                android:hint="Nombre de Dieta"
                android:id="@+id/dietNameDetailsET" 
                android:background="@drawable/editTextStyle"
                android:enabled="false"
                android:layout_below="@+id/dietNameLabel"/>
            <Button
                android:text="Ver Detalles"
                android:textSize="20dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/buttonStyle"
                android:layout_margin="10dp"
                android:layout_width="250dp"
                android:onClick="dietDetails"
                android:layout_height="wrap_content"
                android:id="@+id/dietDetailsPB" 
                android:layout_below="@+id/dietNameDetailsET"/>

            <TextView
                android:text="Rutina de Ejercicio"
                android:textSize="30dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/titleRutineDetails" 
                android:layout_below="@+id/dietDetailsPB"/>
            <TextView
                android:text="Nombre"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/rutineNameLabel" 
                android:layout_below="@+id/titleRutineDetails"/>
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:minWidth="25px"
                android:minHeight="25px"
                android:hint="Nombre de Dieta"
                android:id="@+id/rutineNameDetailsET" 
                android:background="@drawable/editTextStyle"
                android:enabled="false"
                android:layout_below="@+id/rutineNameLabel"/>
            <Button
                android:text="Ver Detalles"
                android:textSize="20dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/buttonStyle"
                android:layout_margin="10dp"
                android:layout_width="250dp"
                android:onClick="dietDetails"
                android:layout_height="wrap_content"
                android:id="@+id/rutineDetailsPB" 
                android:layout_below="@+id/rutineNameDetailsET"/>
            <TextView
                android:text="Reporte"
                android:textSize="30dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/reportLabel" 
                android:layout_below="@id/rutineDetailsPB"/>
            <Button
                android:text="Ver Reporte"
                android:textSize="20dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/buttonStyle"
                android:layout_margin="10dp"
                android:layout_width="250dp"
                android:onClick="viewReport"
                android:layout_height="wrap_content"
                android:id="@+id/reportPB" 
                android:layout_below="@+id/reportLabel"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>