<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/add_user_page"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    android:background="@android:color/holo_blue_light">
   

    <TextView
        android:text="Detalles de Usuario"
        android:textSize="40dp"
        android:textAlignment="center"
        android:textColor="?android:attr/colorPrimaryDark"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/titleUserDetails" />
    <TextView
        android:text="Nombre de Usuario"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="?android:attr/colorPrimaryDark"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/userNameDetailsLabel" 
        android:layout_below="@+id/titleUserDetails"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:minWidth="25px"
        android:enabled="false"
        android:minHeight="25px"
        android:hint="UserName"
        android:id="@+id/userNameDetails" 
        android:background="@drawable/editTextStyle"
        android:layout_below="@+id/userNameDetailsLabel"/>
    <TextView
        android:text="Contraseña"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="?android:attr/colorPrimaryDark"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/passwordDetailsLabel" 
        android:layout_below="@+id/userNameDetails"/>
    <EditText
        android:inputType="textPassword"
        android:textSize="20dp"
        android:hint="Password"
        android:layout_width="300dp"
        android:layout_margin="10dp"
        android:enabled="false"
        android:layout_height="wrap_content"
        android:id="@+id/passwordUserDetailsET"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/editTextStyle"
        android:layout_below="@+id/passwordDetailsLabel"/>
    <TextView
        android:text="Confirmar Contraseña"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="?android:attr/colorPrimaryDark"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/passwordConfirmDetails" 
        android:layout_below="@+id/passwordUserDetailsET"/>
    <EditText
        android:inputType="textPassword"
        android:textSize="20dp"
        android:layout_width="300dp"
        android:hint="Repeat Password"
        android:enabled="false"
        android:layout_height="wrap_content"
        android:id="@+id/passwordConfirmDetailsET" 
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/editTextStyle"
        android:layout_below="@+id/passwordConfirmDetails"/>
    <Button
        android:text="Modificar"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonStyle"
        android:layout_margin="10dp"
        android:layout_width="250dp"
        android:onClick="changeUser"
        android:layout_height="wrap_content"
        android:id="@+id/changeUserPB" 
        android:layout_below="@+id/passwordConfirmDetailsET"/>
    <Button
        android:text="Cancelar"
        android:textSize="20dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/buttonDangerStyle"
        android:layout_margin="10dp"
        android:layout_width="150dp"
        android:onClick="cancelUserUpdate"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/cancelUserUpdatePB" 
        android:layout_below="@+id/passwordConfirmDetailsET"/>
    <Button
        android:text="Guardar"
        android:textSize="20dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/buttonStyle"
        android:layout_margin="10dp"
        android:visibility="invisible"
        android:layout_width="150dp"
        android:onClick="saveUserUpdate"
        android:layout_height="wrap_content"
        android:id="@+id/saveUserUpdatePB" 
        android:layout_below="@+id/passwordConfirmDetailsET"/>
        

</RelativeLayout>
