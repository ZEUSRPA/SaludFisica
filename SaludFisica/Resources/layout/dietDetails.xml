<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/dietDetailsPage"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    android:background="@android:color/holo_blue_light">

    <TextView
        android:text="Detalles de la dieta"
        android:textSize="40dp"
        android:textAlignment="center"
        android:textColor="?android:attr/colorPrimaryDark"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/titleDetallesDieta" />
    <TextView
        android:text="Nombre:"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/nameText" 
        android:layout_below="@+id/titleDetallesDieta"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:hint="Nombre"
        android:id="@+id/dietNameDetails" 
        android:background="@drawable/editTextStyle"
        android:layout_below="@+id/nameText"
        android:enabled="false"/>
    <TextView
        android:text="Detalles:"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/contentText" 
        android:layout_below="@id/dietNameDetails"/>
    <EditText
            android:inputType="textMultiLine"
            android:textSize="20dp"
            android:layout_width="300dp"
            android:hint="Detalles"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:id="@+id/dietDescriptionDetails" 
            android:layout_below="@+id/contentText"
            android:background="@drawable/editTextStyle"
            android:enabled="false"/>
    <TextView
        android:text="Kcal Totales:"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/dietKcalText" 
        android:layout_below="@id/dietDescriptionDetails"/>
    <EditText
            android:inputType="number"
            android:textSize="20dp"
            android:layout_width="300dp"
            android:hint="Kcal Totales"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:id="@+id/dietKcalDetails" 
            android:layout_below="@+id/dietKcalText"
            android:background="@drawable/editTextStyle"
            android:enabled="false"/>
    <Button
                android:text="Modificar"
                android:textSize="20dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/buttonStyle"
                android:layout_margin="10dp"
                android:visibility="visible"
                android:layout_width="150dp"
                android:onClick="changeDiet"
                android:layout_height="wrap_content"
                android:id="@+id/changeDietPB" 
                android:layout_below="@+id/dietKcalDetails"/>
    <Button
                android:text="Cancelar"
                android:textSize="20dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/buttonDangerStyle"
                android:layout_margin="10dp"
                android:layout_width="150dp"
                android:onClick="cancelDietUpdate"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:id="@+id/cancelDietUpdatePB" 
                android:layout_below="@+id/dietKcalDetails"/>
            <Button
                android:text="Guardar"
                android:textSize="20dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/buttonStyle"
                android:layout_margin="10dp"
                android:visibility="invisible"
                android:layout_width="150dp"
                android:onClick="saveDietUpdate"
                android:layout_height="wrap_content"
                android:id="@+id/saveDietUpdatePB" 
                android:layout_below="@+id/dietKcalDetails"/>


</RelativeLayout>
