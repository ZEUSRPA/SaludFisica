<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/add_user_page"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    android:background="@android:color/holo_blue_light">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Expediente"
                android:textSize="30dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/titleRecordDetails"/>
            <TextView
                android:text="Nombre"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/pacientNameRecordLabel" 
                android:layout_below="@+id/titleRecordDetails"/>
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:minWidth="25px"
                android:minHeight="25px"
                android:hint="Nombre"
                android:enabled="false"
                android:id="@+id/pacientNameRecordDetailsET" 
                android:background="@drawable/editTextStyle"
                android:layout_below="@+id/pacientNameRecordLabel"/>
            <TextView
                android:text="Peso (Kg)"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/pacientWeightLabel" 
                android:layout_below="@+id/pacientNameRecordDetailsET"/>
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:minWidth="25px"
                android:minHeight="25px"
                android:hint="Peso"
                android:enabled="false"
                android:id="@+id/pacientWeightDetailsET" 
                android:background="@drawable/editTextStyle"
                android:layout_below="@+id/pacientWeightLabel"/>
            <TextView
                android:text="Estatura (cm)"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/pacientSizeLabel" 
                android:layout_below="@+id/pacientWeightDetailsET"/>
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textAlignment="center"
                android:inputType="number"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:minWidth="25px"
                android:minHeight="25px"
                android:hint="Estatura"
                android:enabled="false"
                android:id="@+id/pacientSizeDetailsET" 
                android:background="@drawable/editTextStyle"
                android:layout_below="@+id/pacientSizeLabel"/>
            <TextView
                android:text="IMC"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/pacientImcLabel" 
                android:layout_below="@+id/pacientSizeDetailsET"/>
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:minWidth="25px"
                android:minHeight="25px"
                android:hint="IMC"
                android:enabled="false"
                android:id="@+id/pacientImcDetailsET" 
                android:background="@drawable/editTextStyle"
                android:layout_below="@+id/pacientImcLabel"/>
            <TextView
                android:text="Cintura (cm)"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/pacientWaistLabel" 
                android:layout_below="@+id/pacientImcDetailsET"/>
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textAlignment="center"
                android:inputType="number"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:minWidth="25px"
                android:minHeight="25px"
                android:hint="Cintura"
                android:enabled="false"
                android:id="@+id/pacientWaistDetailsET" 
                android:background="@drawable/editTextStyle"
                android:layout_below="@+id/pacientWaistLabel"/>
            <TextView
                android:text="Abdomen (cm)"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/pacientAbdomenLabel" 
                android:layout_below="@+id/pacientWaistDetailsET"/>
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:inputType="number"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:minWidth="25px"
                android:minHeight="25px"
                android:hint="Abdomen"
                android:enabled="false"
                android:id="@+id/pacientAbdomenDetailsET" 
                android:background="@drawable/editTextStyle"
                android:layout_below="@+id/pacientAbdomenLabel"/>
            <TextView
                android:text="Cadera (cm)"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/pacientHipLabel" 
                android:layout_below="@+id/pacientAbdomenDetailsET"/>
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:inputType="number"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:minWidth="25px"
                android:minHeight="25px"
                android:hint="Cadera"
                android:enabled="false"
                android:id="@+id/pacientHipDetailsET" 
                android:background="@drawable/editTextStyle"
                android:layout_below="@+id/pacientHipLabel"/>
            <TextView
                android:text="Grasa (%)"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/pacientFatLabel" 
                android:layout_below="@+id/pacientHipDetailsET"/>
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:inputType="number"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:minWidth="25px"
                android:minHeight="25px"
                android:hint="Grasa"
                android:enabled="false"
                android:id="@+id/pacientFatDetailsET" 
                android:background="@drawable/editTextStyle"
                android:layout_below="@+id/pacientFatLabel"/>
            <TextView
                android:text="Grasa Visceral (%)"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/pacientVisceralFatLabel" 
                android:layout_below="@+id/pacientFatDetailsET"/>
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:inputType="number"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:minWidth="25px"
                android:minHeight="25px"
                android:hint="Grasa Visceral"
                android:enabled="false"
                android:id="@+id/pacientVisceralFatDetailsET" 
                android:background="@drawable/editTextStyle"
                android:layout_below="@+id/pacientVisceralFatLabel"/>
            <TextView
                android:text="Musculo (%)"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/pacientMuscleLabel" 
                android:layout_below="@+id/pacientVisceralFatDetailsET"/>
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:inputType="number"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:minWidth="25px"
                android:minHeight="25px"
                android:hint="Musculo"
                android:enabled="false"
                android:id="@+id/pacientMuscleDetailsET" 
                android:background="@drawable/editTextStyle"
                android:layout_below="@+id/pacientMuscleLabel"/>
            <TextView
                android:text="Porcentaje de Agua"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/pacientWaterPercentageLabel" 
                android:layout_below="@+id/pacientMuscleDetailsET"/>
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:inputType="number"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:minWidth="25px"
                android:minHeight="25px"
                android:hint="Porcentaje de Agua"
                android:enabled="false"
                android:id="@+id/pacientWaterPercentageDetailsET" 
                android:background="@drawable/editTextStyle"
                android:layout_below="@+id/pacientWaterPercentageLabel"/>
            <Button
                android:text="Editar Datos"
                android:textSize="20dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/buttonStyle"
                android:layout_margin="10dp"
                android:layout_width="250dp"
                android:onClick="changeRecord"
                android:layout_height="wrap_content"
                android:id="@+id/changeRecordData" 
                android:layout_below="@+id/pacientWaterPercentageDetailsET"/>
            <Button
                android:text="Cancelar"
                android:textSize="20dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/buttonDangerStyle"
                android:layout_margin="10dp"
                android:layout_width="150dp"
                android:onClick="cancelRecordUpdate"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:id="@+id/cancelUpdateRecordPB" 
                android:layout_below="@+id/pacientWaterPercentageDetailsET"/>
            <Button
                android:text="Guardar"
                android:textSize="20dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/buttonStyle"
                android:layout_margin="10dp"
                android:visibility="invisible"
                android:layout_width="150dp"
                android:onClick="saveRecordUpdate"
                android:layout_height="wrap_content"
                android:id="@+id/saveRecordUpdatePB" 
                android:layout_below="@+id/pacientWaterPercentageDetailsET"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
