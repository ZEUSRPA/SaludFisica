<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/addDietasPage"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    android:background="@android:color/holo_blue_light">

    <TextView
            android:text="Detalles de la Dieta"
            android:textSize="40dp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleDietDetails" />
    <TextView
            android:text="Nombre"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleNameDietDetails"
            android:layout_below="@id/titleDietDetails"/>
        <Spinner
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:id="@+id/dietNameDetailsSP"
            android:visibility="invisible"
            android:layout_below="@+id/titleNameDietDetails"/>
        <EditText
            android:inputType="textMultiLine"
            android:textSize="20dp"
            android:layout_width="300dp"
            android:enabled="false"
            android:hint="Nombre"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:id="@id/dietNameDetailsET" 
            android:layout_below="@+id/titleNameDietDetails"
            android:background="@drawable/editTextStyle"/>
        <TextView
            android:text="Descripcion"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleDietDescription" 
            android:layout_below="@id/dietNameDetailsET"/>
        <EditText
            android:inputType="textMultiLine"
            android:textSize="20dp"
            android:layout_width="300dp"
            android:enabled="false"
            android:hint="Detalles"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:id="@+id/dietDescriptionDetailsET" 
            android:layout_below="@+id/titleDietDescription"
            android:background="@drawable/editTextStyle"/>
        <TextView
            android:text="Kcal Totales"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleDietKcal" 
            android:layout_below="@id/dietDescriptionDetailsET"/>
        <EditText
            android:inputType="number"
            android:textSize="20dp"
            android:layout_width="300dp"
            android:enabled="false"
            android:hint="Detalles"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:id="@+id/dietKcalDetailsET" 
            android:layout_below="@+id/titleDietKcal"
            android:background="@drawable/editTextStyle"/>
        <Button
            android:text="Modificar"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:layout_width="200dp"
            android:onClick="changePacientDiet"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/changePacientDietPB" 
            android:layout_below="@+id/dietKcalDetailsET"
            android:background="@drawable/buttonStyle"/>
        <Button
                android:text="Cancelar"
                android:textSize="20dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/buttonDangerStyle"
                android:layout_margin="10dp"
                android:layout_width="150dp"
                android:onClick="cancelPacientDietUpdate"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:id="@+id/cancelPacientDietUpdatePB" 
                android:layout_below="@+id/dietKcalDetailsET"/>
        <Button
            android:text="Guardar"
            android:textSize="20dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/buttonStyle"
            android:layout_margin="10dp"
            android:visibility="invisible"
            android:layout_width="150dp"
            android:onClick="savePacientDietUpdate"
            android:layout_height="wrap_content"
            android:id="@+id/savePacientDietUpdatePB" 
            android:layout_below="@+id/dietKcalDetailsET"/>
</RelativeLayout>